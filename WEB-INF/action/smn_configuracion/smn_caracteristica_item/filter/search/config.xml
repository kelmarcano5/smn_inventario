<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Ejecutar consulta y enrutar dependiendo de que un recordset
		tenga o no registros
	</summary>

	<log>false</log>

	<!--configura el control de paginacion-->
	<set-request-attribute id="paging.recordset" value="query-smncaracteristicaitem.sql" />
	<set-request-attribute id="paging.pagesize" value="10" />

	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset></recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>smn_estructura_codigo_id</colname>
			<colname>smn_item_rf</colname>
			<colname>cit_descripcion_tecnica</colname>
			<colname>cit_tipo_producto</colname>
			<colname>smn_centro_costo_rf</colname>
			<colname>cit_item_compuesto</colname>
			<colname>cit_fecha_registro_ini</colname>
			<colname>cit_fecha_registro_fin</colname>
		
		</cols>
		<table>smn_inventario.smn_caracteristica_item</table>
		<oper>CONSULTA</oper>
		<area>Consulta</area>
		<!-- 
 			para auditoria de consulta permite obtener la cantidad de registro obtenidos
 			de la busqueda (opcional)
 		-->
		<recordCount recordset="query-smncaracteristicaitem.sql"/>
	</audit>

	<transaction>
		<classname>dinamica.audit.AuditableSearch</classname>
		<validator>true</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
	</transaction>
	
	<searchCols>smn_estructura_codigo_id;smn_item_rf;cit_descripcion_tecnica;cit_tipo_producto;smn_centro_costo_rf;cit_item_compuesto;cit_fecha_registro_ini;cit_fecha_registro_fin;</searchCols>

	<on-exit return-code="0" forward-to="/action/initview" />
	<on-exit return-code="1" forward-to="${def:actionroot}/notfound" />

</config>
