<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnruta.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_route}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_route}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='rut_codigo' title='${lbl:b_code}'  align='left' />
			<col name='smn_zona_rf' title='${lbl:b_zone}'  format='######' align='left' />
			<col name='rut_estatus' title='${lbl:b_status}'  align='left' />
			<col name='rut_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />
			<col name='rut_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnruta.sql' width='100' spacingBefore='10'>
			<col name='rut_codigo' title='${lbl:b_code}' width='10' align='left' />
			<col name='rut_nombre' title='${lbl:b_name}' width='10' align='left' />
			<col name='smn_zona_rf' title='${lbl:b_zone}' width='10' align='left' format='######' />
			<col name='rut_posicion_ruta' title='${lbl:b_position_route}' width='10' align='left' format='######' />
			<col name='rut_estatus' title='${lbl:b_status}' width='10' align='left' />
			<col name='rut_vigencia' title='${lbl:b_validation_date}' width='10' align='left' format='dd-MM-yyyy' />
			<col name='rut_idioma' title='${lbl:s_profile_lang}' width='10' align='left' />
			<col name='rut_usuario' title='${lbl:b_users}' width='10' align='left' />
			<col name='rut_fecha_registro' title='${lbl:b_store_date}' width='10' align='left' format='dd-MM-yyyy' />
			<col name='rut_hora' title='${lbl:s_loginhist_col2}' width='10' align='left' />

		</record>

	</pdf-report>
</config>
